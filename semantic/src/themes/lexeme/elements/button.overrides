/*******************************
         Site Overrides
*******************************/

.ui.button {
  border-radius:    0;
  text-transform:   uppercase;
  border:           1px solid @solidBorderColor;
  background-color: @primaryBackgroundColor;
  padding:          0.5em 2em;
}

.ui.button:hover{
  background-color: @highlightedBackgroundColor;
  color:            @highlightedTextColor;
}

